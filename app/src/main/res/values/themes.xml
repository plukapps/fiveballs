<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    <style name="Theme.FiveBalls" parent="android:Theme.Material.Light.NoActionBar" />-->

    <style name="AquaTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/appColorBackground</item>
        <item name="android:buttonStyle">@style/AquaButton</item>
        <item name="android:textViewStyle">@style/AquaTextView</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:alertDialogStyle">@style/AquaAlertDialog</item>
    </style>

    <style name="AquaTheme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
<!--        <item name="android:windowAnimationStyle">@style/AquaThemeDialogAnimation</item>-->
    </style>

    <style name="AquaThemeDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
</resources>