<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="0dp" android:left="0dp" 
        android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#aa0000" />
             <corners 
				android:radius="9dp"
		        android:topLeftRadius="0dp"
		        android:topRightRadius="0dp"
		        android:bottomLeftRadius="9dp"
		        android:bottomRightRadius="9dp" />
		        
			 <gradient 
				android:type="linear"
				 android:angle="90" 
				android:gradientRadius="270"
				android:startColor="#5532599D" 
				android:endColor="#bb6490C6" />
        </shape>
    </item>
    
	<item android:top="0dp" android:left="-3dp" 
        android:right="-2dp" android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
             <stroke 
                 android:width="2dp" 
                 android:color="#ffffff"/>
        </shape>
    </item>
    
